{
  "compilerOptions": {
    "target": "ES2016", // 控制编译后输出的是什么js版本
    "module": "CommonJS", // 指定使用的模块标准
    "strict": true,
    "jsx": "preserve",
    "importHelpers": true,
    "moduleResolution": "node",
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "baseUrl": ".",
    "outDir": "./output",
    "types": [
      "node"
    ],
    "declaration": true, // 是否生成声明文件
    "declarationDir": "dist/type", // 声明文件打包的位置
    "lib": [
      "es2016",
    ]
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "src/**/*.ts",
    "index.ts",
    "demo.ts"
  ]
}